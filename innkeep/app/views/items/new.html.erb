<div id="masthead">
	
	<div class="content_pad">
		
		<h1 class="">Add Item</h1>
		
		<div id="bread_crumbs">
			<a href="../dashboard.html">Home</a> / 
			<a href="<%= items_path %>">Items</a> / 
			<a href="javascript:;" class="current_page">New</a>				
		 </div> <!-- #bread_crumbs -->
		
		<div id="search">
			<form action="/search" method="get">
				<input type="text" value="" placeholder="Search" name="search" id="search_input" title="Search" />					
				<input type="submit" value="" name="submit" class="submit" />					
			</form>
		</div> <!-- #search -->
		
	</div> <!-- .content_pad -->
	
</div> <!-- #masthead -->	

<div id="content" class="xgrid">
	
	<div class="x12">
		
		<%= form_tag(items_path, {:class => "form label-inline uniform"}) do %>
		<%= render :partial => "form" %>
						
						<br />
						<div class="buttonrow">
							<button class="btn">Save</button> or <a href="<%= items_path %>">cancel</a>
						</div>

						<% end %>
		
	</div> <!-- .x12 -->
	
</div> <!-- #content -->

<% content_for :page_script do %>
	$(".uniform").uniform();
<% end %>